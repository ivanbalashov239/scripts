SCRIPTS=/home/ivn/scripts/

#stime_H=$(date +%H)
stime_H=0

stime_M=$(date +%M)

echo $stime_H
echo $stime_M

case "$stime_H" in
  
 "5" | "6" | "7" | "8" | "9" | "10" | "11" | "12"  )
  DAYTIME="утр+а"
  ;;
  "13" | "14" | "15" | "16" | "17" )
  DAYTIME="дня"
  ;;
  #"(( $stime_H >= 18  && $stime_H<= 23 ))" | "0" )
  "18" | "19" | "20" | "21" | "22" | "23" | "0" )
  DAYTIME="вечера"
  ;;
  "1" | "2" | "3" | "4" )
  DAYTIME="н+очи"
  ;;
esac


if (( $stime_H >= 12 )) ; then
    let "stime_H= stime_H - 12"      
fi
if (( $stime_H == 0 )) ; then
    stime_H=12   
fi
#let "stime_M= stime_M - stime_M%5"

