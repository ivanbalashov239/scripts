TEXT="$(${SCRIPTS}number_case.php male ${stime_H} ) \
      $(${SCRIPTS}pluralform.sh ${stime_H} час час+а час+ов)"
echo "$TEXT"

TEXT="${TEXT} $DAYTIME"

